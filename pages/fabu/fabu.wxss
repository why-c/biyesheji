.title {
  color: #070706;
  font-size: 40rpx;
  font-family: STXingkai;
}
.view-contain-ti {
  display: flex;
  height: 40px;
  margin:10px;
  border: 3rpx solid #faca82;
  border-radius: 10rpx;
}

.text-ti {
  position: absolute;
  font-size: 12px;
  background: white;
  margin: -10px 0 0 10px;
  padding: 0 5px;
  color: rgb(144, 147, 167);
}

.input1 {
  margin:  auto 10px;
  width: 100%;
}

.input {
  border: solid 1px gainsboro;
  width: 98%;
  margin: 1%;
}

.desc {
  margin-top: 25rpx;
  width: 98%;
  border: solid 1px gainsboro;
  margin: 1%;
  height: 150rpx;
}

.picker {
  color:black;
  margin: 30rpx;
  font-size: 36rpx;
  /* text-align: center; */
}

.imageRootAll {
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  margin-left: 10px;
}


.imgItem {
  margin: 6rpx;
  position: relative;
  width: 176rpx;
  height: 176rpx;
  background: rgb(71, 67, 67);
}

.img {
  width: 100%;
  height: 100%;
}

.closeImg {
  position: absolute;
  right: 0px;
  width: 32rpx;
  height: 32rpx;
}

.photo {
  width: 50%;
  height: 50%;
  margin: 25%;
}